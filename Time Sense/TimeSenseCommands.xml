<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en" Name="commandSet_en">
    <CommandPrefix>Time Sense, </CommandPrefix>
    <Example> what's my usage?</Example>

   <Command Name="usage">
      <Example>how much I used the device?</Example>
      <ListenFor>How much [I] used [the] [my] {device}?</ListenFor>
      <ListenFor>What is my usage [time]?</ListenFor>
      <Feedback>Here's your usage</Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="timeline">
      <Example>show the timeline</Example>
      <ListenFor>{opener} [the] [my] timeline</ListenFor>
      <ListenFor>{opener} [the] [my] list of unlocks</ListenFor>
      <ListenFor>{opener} [my] unlocks' list</ListenFor>
      <Feedback>Here's your timeline</Feedback>
      <Navigate/>
    </Command>
    
    <Command Name="report">
      <Example>show my report</Example>
      <ListenFor>{opener} [the] [my] report</ListenFor>
      <Feedback>Here's your report</Feedback>
      <Navigate/>
    </Command>

    <Command Name="settings">
      <Example>Open settings</Example>
      <ListenFor>Open [the] settings</ListenFor>
      <Feedback>Here's your settings</Feedback>
      <Navigate/>
    </Command>
