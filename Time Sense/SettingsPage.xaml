                                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Text="{Binding name}"/>
                                        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="{Binding number}" Foreground="#999999"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>                            
                        </ListView.ItemTemplate>
                    </ListView>
                        <CommandBar HorizontalAlignment="Left" Background="Transparent">
                            <AppBarButton x:Name="sms_add" Click="AppBarButton_Click" Icon="Add" Label="Add"/>
                            <AppBarButton x:Name="sms_select" Click="AppBarButton_Click_1" Icon="List" Label="Select"/>
                            <AppBarButton x:Name="sms_delete" Visibility="Collapsed" Click="AppBarButton_Click_2" Icon="Delete" Label="Delete"/>
                            <AppBarButton x:Name="sms_cancel" Visibility="Collapsed" Click="AppBarButton_Click_3" Icon="Cancel" Label="Cancel"/>
                        </CommandBar>
                </StackPanel>-->
                    <StackPanel Margin="0,6" x:Name="backup_grid" RelativePanel.Below="notifications_grid" HorizontalAlignment="Stretch" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" >
                    <TextBlock x:Uid="backup_banner" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock x:Uid="backup_header" Margin="0,6,0,0" />
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Uid="backup_btn" Click="backup_btn_Click" x:Name="backup_btn" Margin="0,6,3,0" HorizontalAlignment="Stretch"/>
                        <Button x:Uid="restore_btn" Click="restore_btn_Click" x:Name="restore_btn" Margin="3,6,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <TextBlock x:Name="reset_header" Margin="0,6,0,0"/>
                    <Grid Margin="0,0,0,6" x:Name="reset_grid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Uid="resetone_btn" Click="resetOne_btn_Click" x:Name="resetOne_btn" Margin="0,6,3,0" HorizontalAlignment="Stretch"/>
                        <Button x:Uid="resetall_btn" Click="resetAll_btn_Click" x:Name="resetAll_btn" Margin="3,6,3,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <TextBlock x:Uid="migrate_header_1" Margin="0,6,0,0" Text="Migrate"/>
                    <TextBlock x:Uid="migrate_header_2" Foreground="#999999" TextWrapping="Wrap"/>
                    <Grid Margin="0,0,0,6" x:Name="migrate_grid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Uid="migrate_btn" Click="migrate_btn_Click" x:Name="migrate_btn" Margin="0,6,3,0" HorizontalAlignment="Stretch" Content="Migrate old data"/>
                    </Grid>
                </StackPanel>
                <StackPanel x:Name="about_grid" RelativePanel.Below="backup_grid" Margin="0,6" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" HorizontalAlignment="Stretch">
                    <TextBlock x:Uid="about_banner" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Margin="0,3,0,0" Text="Time Sense 2.0"/>
                    <TextBlock Text="© 2015 Lorenzo Farinelli"/>
                    <Button Margin="0,6" Content="Send feedback" x:Uid="feedback_button" x:Name="feedback_btn" Click="feedback_btn_Click"/>
                </StackPanel>

                <!--<StackPanel x:Name="appservice_grid" RelativePanel.Below="about_grid" Margin="0,6" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" HorizontalAlignment="Stretch">
                    <TextBlock x:Uid="service_text" Foreground="#999999" TextWrapping="Wrap"/>
                </StackPanel>-->
            </RelativePanel>
        </ScrollViewer>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Uid="help_btn" x:Name="guide_settngs_btn" Label="Tutorial" Icon="Help" HorizontalAlignment="Right" Click="guide_settngs_btn_Click"/>
            <AppBarButton x:Uid="rate_btn" x:Name="rate_btn" Label="Rate" Icon="Favorite" HorizontalAlignment="Right" Click="rate_btn_Click"/>
        </CommandBar>
    </Page.BottomAppBar> 
</Page>