                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Fill="{ThemeResource SystemControlBackgroundListMediumBrush}" Width="48" Height="48"/>
                                    <FontIcon Glyph="&#xE13D;" VerticalAlignment="Center"/>
