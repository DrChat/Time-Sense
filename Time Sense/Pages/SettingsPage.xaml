                <StackPanel
                    x:Name="backup_grid"
                    Margin="0,6"
                    RelativePanel.Below="notifications_grid"
                    Style="{StaticResource settings_section}">
                    <TextBlock
                        x:Uid="backup_banner"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock
                        x:Uid="backup_header"
                        Margin="0,6,0,0" />
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="backup_btn"
                            x:Uid="backup_btn"
                            Margin="0,6,3,0"
                            HorizontalAlignment="Stretch"
                            Click="backup_btn_Click" />
                        <Button
                            x:Name="restore_btn"
                            x:Uid="restore_btn"
                            Grid.Column="1"
                            Margin="3,6,0,0"
                            HorizontalAlignment="Stretch"
                            Click="restore_btn_Click" />
                    </Grid>
                    <TextBlock
                        x:Name="reset_header"
                        Margin="0,6,0,0" />
                    <Grid
                        x:Name="reset_grid"
                        Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="resetOne_btn"
                            x:Uid="resetone_btn"
                            Margin="0,6,3,0"
                            HorizontalAlignment="Stretch"
                            Click="resetOne_btn_Click" />
                        <Button
                            x:Name="resetAll_btn"
                            x:Uid="resetall_btn"
                            Grid.Column="1"
                            Margin="3,6,3,0"
                            HorizontalAlignment="Stretch"
                            Click="resetAll_btn_Click" />
                    </Grid>
                    <TextBlock
                        x:Uid="migrate_header_1"
                        Margin="0,6,0,0" />
                    <TextBlock
                        x:Uid="migrate_header_2"
                        Style="{StaticResource settings_header_subtitle}" />
                    <Grid
                        x:Name="migrate_grid"
                        Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="migrate_btn"
                            x:Uid="migrate_btn"
                            Margin="0,6,3,0"
                            HorizontalAlignment="Stretch"
                            Click="migrate_btn_Click" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    x:Name="about_grid"
                    Margin="0,6"
                    RelativePanel.Below="backup_grid"
                    Style="{StaticResource settings_section}">
                    <TextBlock
                        x:Uid="about_banner"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock
                        Margin="0,3,0,0"
                        Text="Time Sense 2.1" />
                    <TextBlock Text="© 2015 Lorenzo Farinelli" />
                    <TextBlock
                        x:Uid="thanks_banner"
                        Margin="0,3,0,0" />
                    <StackPanel Orientation="Horizontal">
                        <HyperlinkButton
                            Padding="0"
                            Content="TheWinDuck"
                            NavigateUri="http://www.thewinduck.com" />
                        <TextBlock
                            x:Uid="thanks_german"
                            Margin="6,0"
                            VerticalAlignment="Center" />
                    </StackPanel>
                    <Button
                        x:Name="feedback_btn"
                        x:Uid="feedback_button"
                        Margin="0,12"
                        Click="feedback_btn_Click"
                        Content="Send feedback" />
                </StackPanel>

                <!--
                    <StackPanel x:Name="appservice_grid" RelativePanel.Below="about_grid" Margin="0,6" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" HorizontalAlignment="Stretch">
                    <TextBlock x:Uid="service_text" Foreground="#999999" TextWrapping="Wrap"/>
                    </StackPanel>
                -->
            </RelativePanel>
        </ScrollViewer>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton
                x:Name="guide_settngs_btn"
                x:Uid="help_btn"
                Click="guide_settngs_btn_Click"
                Icon="Help" />
            <AppBarButton
                x:Name="rate_btn"
                x:Uid="rate_btn"
                Click="rate_btn_Click"
                Icon="Favorite" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>