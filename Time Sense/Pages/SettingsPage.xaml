<Page
    x:Class="Time_Sense.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Time_Sense"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <RelativePanel
                x:Name="root_panel"
                Margin="18">
                <StackPanel
                    x:Name="privacy_grid"
                    Margin="0,0,0,6"
                    RelativePanel.AlignTopWithPanel="True"
                    Style="{StaticResource settings_section}">
                    <TextBlock
                        x:Uid="privacy_banner"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <ToggleSwitch
                        x:Name="password_switch"
                        Margin="0,6"
                        Toggled="password_switch_Toggled">
                        <ToggleSwitch.Header>
                            <StackPanel>
                                <TextBlock x:Uid="password_header_1" />
                                <TextBlock
                                    x:Uid="password_header_2"
                                    Style="{StaticResource settings_header_subtitle}" />
                            </StackPanel>
                        </ToggleSwitch.Header>
                    </ToggleSwitch>
                    <Grid
                        x:Name="password_edit_grid"
                        Margin="0,0,0,6"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="password_box"
                            VerticalAlignment="Stretch"
                            BorderBrush="{Binding
                                Background,
                                ElementName=nfc_btn}"
                            BorderThickness="2,2,0,2"
                            InputScope="NumericPin"
                            IsEnabled="False"
                            KeyDown="password_box_KeyDown"
                            LostFocus="password_box_LostFocus" />
                        <Button
                            x:Name="password_btn"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Click="password_btn_Click">
                            <Button.Content>
                                <FontIcon
                                    x:Name="password_icon"
                                    Glyph="" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </StackPanel>

                <StackPanel
                    x:Name="device_grid"
                    Margin="0,6"
                    RelativePanel.Below="privacy_grid"
                    Style="{StaticResource settings_section}">
                    <TextBlock
                        x:Uid="device_banner"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <ToggleSwitch
                        x:Name="location_switch"
                        Margin="0,6"
                        Toggled="location_switch_toggled">
                        <ToggleSwitch.Header>
                            <StackPanel>
                                <TextBlock x:Uid="location_header_1" />
                                <TextBlock
                                    x:Uid="location_header_2"
                                    Style="{StaticResource settings_header_subtitle}" />
                            </StackPanel>
                        </ToggleSwitch.Header>
                    </ToggleSwitch>
                    <Grid
                        x:Name="nfc_panel"
                        Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="nfc_box"
                            HorizontalAlignment="Stretch"
                            BorderBrush="{Binding
                                Background,
                                ElementName=nfc_btn}"
                            BorderThickness="2,2,0,2">
                            <ComboBox.Header>
                                <StackPanel>
                                    <TextBlock x:Uid="nfc_header_1" />
                                    <TextBlock
                                        x:Uid="nfc_header_2"
                                        Style="{StaticResource settings_header_subtitle}" />
                                </StackPanel>
                            </ComboBox.Header>
                            <ComboBoxItem
                                x:Name="nfc_first"
                                x:Uid="nfc_usage"
                                IsSelected="True" />
                            <ComboBoxItem x:Uid="nfc_timeline" />
                            <ComboBoxItem x:Uid="nfc_locon" />
                            <ComboBoxItem x:Uid="nfc_locoff" />
                        </ComboBox>
                        <Button
                            x:Name="nfc_btn"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Click="nfc_btn_Click">
                            <Button.Content>
                                <FontIcon Glyph="" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </StackPanel>
                <StackPanel
                    x:Name="notifications_grid"
                    Margin="0,12"
                    RelativePanel.Below="device_grid"
                    Style="{StaticResource settings_section}">
                    <TextBlock
                        x:Uid="notifications_banner"
                        Style="{StaticResource TitleTextBlockStyle}" />
                    <ComboBox
                        x:Name="threshold_box"
                        Margin="0,6,0,18"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{Binding
                            Background,
                            ElementName=nfc_btn}"
                        BorderThickness="2"
                        SelectionChanged="threshold_box_selectionChanged">
                        <ComboBox.Header>
                            <StackPanel>
                                <TextBlock x:Uid="limit_header_1" />
                                <TextBlock
                                    x:Uid="limit_header_2"
                                    Style="{StaticResource settings_header_subtitle}" />
                            </StackPanel>
                        </ComboBox.Header>
                        <ComboBoxItem
                            x:Uid="limit_item_1"
                            Tag="1" />
                        <ComboBoxItem
                            x:Uid="limit_item_2"
                            Tag="2" />
                        <ComboBoxItem
                            x:Uid="limit_item_3"
                            Tag="3" />
                        <ComboBoxItem
                            x:Uid="limit_item_4"
                            Tag="4" />
                        <ComboBoxItem
                            x:Uid="limit_item_5"
                            Tag="5" />
                    </ComboBox>
                    <!--
                        <StackPanel Margin="0,12">
                        <ToggleSwitch x:Name="sms_toggle" Toggled="sms_toggle_Toggled">
                        <ToggleSwitch.Header>
                        <StackPanel>
                        <TextBlock Text="Send an SMS notiification"/>
                        <TextBlock Text="Sends a text message to the specified number when you reach the threshold" Foreground="#999999" TextWrapping="Wrap"/>
                        </StackPanel>
                        </ToggleSwitch.Header>
                        </ToggleSwitch>
                        <Grid x:Name="sms_grid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
